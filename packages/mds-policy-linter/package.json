{
  "name": "@mds-core/mds-policy-linter",
  "version": "0.1.0",
  "description": "Linter tool for MDS Policy documents",
  "keywords": [
    "policy",
    "lint"
  ],
  "license": "Apache-2.0",
  "author": "Marie Maxham",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "start": "pnpm watch index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "pnpm build && nodemon --watch '../../packages' --ext 'ts' --ignore '*.d.ts' --exec pnpm ts-node --"
  },
  "dependencies": {
    "@mds-core/mds-policy-service": "workspace:0.11.26",
    "@mds-core/mds-utils": "workspace:0.5.0",
    "ajv": "8.10.0",
    "yargs": "17.3.1"
  }
}
