    "@mds-core/mds-policy-service": "workspace:0.6.0",
    "@mds-core/mds-providers": "workspace:0.1.36",
    "@mds-core/mds-schema-validators": "workspace:0.3.3",
    "@mds-core/mds-service-helpers": "workspace:0.3.5",
    "@mds-core/mds-types": "workspace:0.5.1",
    "@mds-core/mds-utils": "workspace:0.2.1",
    "@types/express": "4.17.12",
    "express": "4.17.1",
    "http-status-codes": "2.1.4"
  },
  "devDependencies": {
    "@mds-core/mds-geography-service": "workspace:0.1.12",
    "@mds-core/mds-test-data": "workspace:0.3.1"
